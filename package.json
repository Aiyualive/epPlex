{
    "scripts": {
        "lint:fix": "prettier */*.js \"*/**/*{.js,.ts}\" -w",
        "lint": "prettier */*.js \"*/**/*{.js,.ts}\" --check",
        "setup-rpc-win": "set RPC=http://127.0.0.1:8899",
        "setup-rpc-mac": "export RPC=http://127.0.0.1:8899 && echo $RPC",
        "setup-test": "cross-env HELLO_RPC=http://127.0.0.1:8899",

        "validator": "solana-test-validator -u localhost",
        "reset-validator": "rm -rf test-ledger",

        "build-burger": "anchor build -p epplex_burger",
        "build-core": "anchor build -p epplex_core",
        "build-all": "yarn build-burger && yarn build-core",


        "airdrop": "solana airdrop 50 -u localhost -k target/deploy/epplex_deploy_auth.json",
        "deploy-burger": "yarn build-burger && anchor deploy -p epplex_burger --provider.cluster localnet --program-keypair target/deploy/epplex_burger-keypair.json --provider.wallet target/deploy/epplex_deploy_auth.json",
        "deploy-core": "yarn build-core && anchor deploy -p epplex_core --provider.cluster localnet --program-keypair target/deploy/epplex_core-keypair.json --provider.wallet target/deploy/epplex_deploy_auth.json",
        "deploy-all": "yarn deploy-burger && yarn deploy-core",

        "copy-burger-sdk": "cp target/idl/epplex_burger.json    ../sdk/src/idl/epplex_burger.json       && cp target/types/epplex_burger.ts    ../sdk/src/types/epplexBurgerTypes.ts",
        "copy-core-sdk":   "cp target/idl/epplex_core.json      ../sdk/src/idl/epplex_core.json         && cp target/types/epplex_core.ts      ../sdk/src/types/epplexCoreTypes.ts",
        "copy-to-sdk": "yarn copy-burger-sdk && yarn copy-core-sdk",


        "close-buffers-mainnet": "solana program close --buffers -u mainnet-beta -k target/deploy/epplex_deploy_auth.json",
        "show-buffers-mainnet": "solana program show --buffers -u mainnet-beta -k target/deploy/epplex_deploy_auth.json",
        "show-programs-mainnet": "solana program show --programs -u mainnet-beta -k target/deploy/epplex_deploy_auth.json",
        "solana-balance": "solana balance -u mainnet-beta -k target/deploy/epplex_deploy_auth.json",

        "transfer-sol": "olana transfer --from <KEYPAIR_PATH> <DESTINATION_PUBKEY> AMOUNT --fee-payer <KEYPAIR_PATH> --allow-unfunded-recipient",

        "test": "anchor test --provider.cluster localnet --skip-deploy --skip-build --skip-local-validator --provider.wallet target/deploy/epplex_deploy_auth.json"
    },
    "dependencies": {
        "@coral-xyz/anchor": "^0.27.0",
        "@project-serum/borsh": "^0.2.5",
        "@solana/spl-token": "^0.3.7",
        "@solana/web3.js": "^1.75.0",
        "@switchboard-xyz/solana.js": "^3.2.4",
        "dotenv": "^16.0.3"
    },
    "devDependencies": {
        "@types/chai": "^4.3.4",
        "@types/mocha": "^10.0.1",
        "chai": "^4.3.7",
        "mocha": "^10.2.0",
        "prettier": "^2.8.7",
        "shelljs": "^0.8.5",
        "ts-mocha": "^10.0.0",
        "typescript": "^5.0.4"
    },
    "license": "UNLICENSED"
}
