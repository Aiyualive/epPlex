{
    "scripts": {
        "lint:fix": "prettier */*.js \"*/**/*{.js,.ts}\" -w",
        "lint": "prettier */*.js \"*/**/*{.js,.ts}\" --check",

        "validator": "solana-test-validator",
        "reset-validator": "rm -rf test-ledger",

        "build-burger": "anchor build -p epplex_burger",
        "build-core": "anchor build -p epplex_core",
        "build-all": "yarn build-burger && yarn build-core",

        "deploy-burger": "RPC=$RPC && anchor deploy -p epplex_burger --provider.cluster $RPC --program-keypair target/deploy/epplex_burger-keypair.json --provider.wallet target/deploy/epplex_deploy_auth.json",
        "deploy-core": "RPC=$RPC && anchor deploy -p epplex_core --provider.cluster $RPC --program-keypair target/deploy/epplex_core-keypair.json --provider.wallet target/deploy/epplex_deploy_auth.json",
        "deploy-all": "yarn deploy-burger && yarn deploy-core",

        "mainnet-deploy": "MAINNET_RPC=$MAINNET_RPC && anchor build && anchor deploy --provider.cluster $MAINNET_RPC --provider.wallet /Users/Mac/.config/solana/id.json",

        "test": "RPC=$RPC anchor test --provider.cluster $RPC --skip-deploy --skip-build --provider.wallet target/deploy/program-epplex_deploy_auth.json"
    },
    "dependencies": {
        "@coral-xyz/anchor": "^0.27.0",
        "@project-serum/borsh": "^0.2.5",
        "@solana/spl-token": "^0.3.7",
        "@solana/web3.js": "^1.75.0",
        "@switchboard-xyz/solana.js": "^3.2.4",
        "dotenv": "^16.0.3"
    },
    "devDependencies": {
        "@types/chai": "^4.3.4",
        "@types/mocha": "^10.0.1",
        "chai": "^4.3.7",
        "mocha": "^10.2.0",
        "prettier": "^2.8.7",
        "shelljs": "^0.8.5",
        "ts-mocha": "^10.0.0",
        "typescript": "^5.0.4"
    },
    "license": "UNLICENSED"
}
